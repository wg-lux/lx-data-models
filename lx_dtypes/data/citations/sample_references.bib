	urldate = {2025-07-25},
	journal = {iGIE},
	author = {Wiest, Isabella C. and Ferber, Dyke and Wittlinger, Stefan and Ebert, Matthias P. and Belle, Sebastian and Kather, Jakob Nikolas},
	month = dec,
	year = {2024},
	pages = {447--452.e5},
