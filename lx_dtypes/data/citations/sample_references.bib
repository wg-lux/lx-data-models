	urldate = {2025-09-07},
	journal = {Gastrointestinal Endoscopy},
	author = {Penz, Daniela and Ferlitsch, Arnulf and Waldmann, Elisabeth and Irina, Gessl and Daniel, Pammer and Asaturi, Arno and Hinterberger, Anna and Majcher, Barbara and Szymanska, Aleksandra and Trauner, Michael and Ferlitsch, Monika},
	month = jan,
